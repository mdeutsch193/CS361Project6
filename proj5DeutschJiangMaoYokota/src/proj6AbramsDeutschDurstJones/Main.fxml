<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<?import org.fxmisc.richtext.StyleClassedTextArea?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vBox"
      fx:controller="proj6AbramsDeutschDurstJones.Controller"
      xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">

      <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
        <Menu text="File" fx:id="fileMenu">
            <MenuItem text="About..." fx:id="aboutMenuItem" onAction="#handleAboutAction"/>
            <SeparatorMenuItem />
            <MenuItem text="New" fx:id="newMenuItem" onAction="#handleNewAction" accelerator="Shortcut+N"/>
            <MenuItem text="Open..." fx:id="openMenuItem" onAction="#handleOpenAction" accelerator="Shortcut+O"/>
            <MenuItem text="Close" fx:id="closeMenuItem" onAction="#handleCloseAction" accelerator="Shortcut+W"/>
            <MenuItem text="Save" fx:id="saveMenuItem" onAction="#handleSaveAction" accelerator="Shortcut+S"/>
            <MenuItem text="Save as..." fx:id="saveAsMenuItem" onAction="#handleSaveAsAction" accelerator="Shortcut+Shift+S"/>
            <SeparatorMenuItem />
            <MenuItem text="Exit" fx:id="exitMenuItem" onAction="#handleExitAction" accelerator="Shortcut+Shift+W"/>
        </Menu>
        <Menu text="Edit" fx:id="editMenu">
            <MenuItem text="Undo" fx:id="undoMenuItem" onAction="#handleEditMenuAction" accelerator="Shortcut+Z"/>
            <MenuItem text="Redo" fx:id="redoMenuItem" onAction="#handleEditMenuAction" accelerator="Shortcut+Y"/>
            <MenuItem text="Cut" fx:id="cutMenuItem" onAction="#handleEditMenuAction" accelerator="Shortcut+X"/>
            <MenuItem text="Copy" fx:id="copyMenuItem" onAction="#handleEditMenuAction" accelerator="Shortcut+C"/>
            <MenuItem text="Paste" fx:id="pasteMenuItem" onAction="#handleEditMenuAction" accelerator="Shortcut+V"/>
            <MenuItem text="Select all" fx:id="selectMenuItem" onAction="#handleEditMenuAction" accelerator="Shortcut+A"/>
        </Menu>
        <Menu text="Code" fx:id="codeMenu">
            <MenuItem text="Toggle Comments" fx:id="commentMenuItem" onAction="#handleToggleCommentAction" accelerator="Shortcut+/"/>
            <MenuItem text="Move Line Up" fx:id="moveUpMenuItem" onAction="#handleMoveUpAction" accelerator="Shortcut+Shift+UP"/>
            <MenuItem text="Move Line Down" fx:id="moveDownMenuItem" onAction="#handleMoveDownAction" accelerator="Shortcut+Shift+DOWN"/>
        </Menu>
        <Menu text="Preferences" fx:id="prefMenu">
            <MenuItem text="Light Mode" fx:id="lightMode" onAction="#handleLightModeMenuAction"/>
            <MenuItem text="Dark Mode" fx:id="darkMode" onAction="#handleDarkModeMenuAction"/>
        </Menu>
    </MenuBar>
    <ToolBar fx:id="toolbar" VBox.vgrow="ALWAYS">
        <Button text="Compile" fx:id="compileButton" onAction ="#handleCompileButtonAction"/>
        <Button text="Compile &amp; Run" fx:id="compileRunButton" onAction="#handleCompileRunButtonAction"/>
        <Button text="Stop" fx:id="stopButton" onAction="#handleStopButtonAction"/>
        <TextField/>
        <Button text="Find" fx:id="findButton"/>
    </ToolBar>
    <GridPane maxHeight="Infinity" maxWidth="Infinity" VBox.vgrow="ALWAYS">
        <rowConstraints>
            <RowConstraints percentHeight="75"/>
        </rowConstraints>
        <children>
            <TreeView fx:id="directoryTree" GridPane.vgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2" />
            <TabPane GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="tabPane" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"/>
            <Separator GridPane.columnIndex="1" GridPane.valignment="BOTTOM"/>
            <VirtualizedScrollPane GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                <content>
                    <StyleClassedTextArea fx:id="console"/>
                </content>
            </VirtualizedScrollPane>
        </children>
  </GridPane>
</VBox>
